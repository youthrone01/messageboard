<!DOCTYPE html>
<html lang="en">
<head>
  <title>message board</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
      .comment {
          margin-left: 30px;
      }
  </style>
</head>
<body>
<h1>The Dojo Message Board</h1>
<hr><br>
<% if(error){%> <p>####<%= error %></p>  <%}%>
<form action="/posts" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name"  name="name">
      </div>
      <div class="form-group">
          <label for="message">Message:</label>
          <textarea rows="5" class="form-control" cols="15" id="message"  name="message"></textarea>
      </div>  
      <button type="submit" class="btn btn-default">Post Message</button>
</form>
<hr>
<% for(let post of posts){%>
    <h3>Name: <%= post.name %></h3>
    <h3>Message: <%= post.message %></h3>
    <div class="comment">
        <% for(let comment of post.comments){ %>
            <h3>Name: <%= comment.name %></h3>
            <h3>Comment: <%= comment.content %></h3>
        <%}%><br>
        <form action="/posts/<%= post._id %>" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name"  name="name">
              </div>
              <div class="form-group">
                  <label for="comment">Comment:</label>
                  <textarea rows="5" class="form-control" cols="15" id="content"  name="content"></textarea>
              </div>  
              <button type="submit" class="btn btn-default">Post Comment</button>
        </form>
    </div><br><hr>
<%}%>

</body>
</html>